{% extends 'admin/product/product_base.html.twig' %}

{% form_theme form.categories 'admin/product/_categories_collection.html.twig' %}
{% form_theme form.productsDimensions 'admin/product/_dimensions_collection.html.twig' %}

{% block title %}{{ 'product.add'|trans }}{% endblock %}

{% block content %}
    <div class="col-12">
        <h1>{{ 'product.add'|trans }}</h1>
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                {{ form_row(form.translations) }}
                <hr>
                {{ form_row(form.imageFile) }}
                {{ form_row(form.categories) }}
                {{ form_row(form.productsDimensions) }}

                <a href="{{ path('admin_product_index') }}" class="btn btn-warning">{{ 'global.returnToList'|trans }}</a>
                <button class="btn btn-success">{{ 'global.save'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('custom/js/add-collection-widget.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            initializeCollection('categories', 'category__item');
            initializeCollection('dimensions', 'dimension__item');
        });
    </script>
{% endblock %}
