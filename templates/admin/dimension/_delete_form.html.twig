<form method="post" action="{{ path('admin_dimension_delete', {'id': dimension.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dimension.id) }}">
    <button class="btn btn-danger">{{ 'global.delete'|trans }}</button>
</form>
