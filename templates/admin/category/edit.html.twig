{% extends 'admin/category/category_base.html.twig' %}

{% block title %}{{ 'category.edit'|trans }}{% endblock %}

{% block content %}
    <div class="col-12">
        <h1>{{ 'category.edit'|trans }}</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex">
                    <a href="{{ path('admin_category_index') }}" class="btn btn-warning">{{ 'global.returnToList'|trans }}</a>
                    <button class="btn btn-success ml-2">{{ 'global.save'|trans }}</button>
                    {{ form_end(form) }}
                    <div class="ml-auto">
                        {{ include('admin/category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
